.main-container
  .left-container
    = render partial: 'shared/leftbar'
  .right-container
    #group-info-box
      %p#group-info-box__name
        = @group.name
      %p#group-info-box__member
        Members: 
        = @users.map(&:name).join(" ")
      = link_to edit_group_path(@group) do
        #group-info-box__edit-btn
          Edit

    #message-box
    - @messages.each do |message|
      %p#message-box__sender
        = message.user.name
        %span#message-box__datetime
          = message.created_at.strftime("%Y-%m-%d %H:%M:%S")
      %p#message-box__content
        = message.body

    #texting-box
      = form_for ([@group, @message])do |f|
        = f.text_field :body, placeholder: "type a message", size: "20", id: "texting-box__input"
        %i.fa.fa-picture-o#texting-box__photo-icon
        = f.submit value: "Send", id: "texting-box__send-btn"
